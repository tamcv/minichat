<%= stylesheet_link_tag "css_messages.css" %>
<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
<br>
<div class="container bootstrap snippet">

  <div class="jumbotron list-content">
    <ul class="list-group">
      <li href="#" class="list-group-item title">
        All Available Users
      </li>
      <% @users.each do |user| %>
        <% if user.id != current_user.id %>
          <li href="#" class="list-group-item text-left">
              <img class="img-thumbnail"  src="/images/user.jpg">
            <label class="name">
              <%= user.name %>
            </label>
            <label class="pull-right">
                <% if current_user.friend_list.include? user.id  %>
                  <%= link_to "Sent Message", new_messages_path(friend_id: user.id), class: "btn btn-success btn-xs glyphicon glyphicon-ok" %>
                <% else %>
                  <%= form_tag add_friend_path, method: :post do %>
                    <%= hidden_field_tag 'friend_id', user.id %>
                    <%= button_tag "Add Friend", class: "btn btn-success btn-xs glyphicon glyphicon-ok" %>
                  <% end %>
                <% end %>
            </label>
            <div class="break"></div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
  </div>
</div>  