<% if @messages.empty? %>
  <div class="alert alert-error">
    No messages!
  </div>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <td>Sender</td>
        <td>Subject</td>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
      <tr>
        <% unless message.is_read %>
        <td><%= message.sender %></td>
        <td><%= message.subject %></td>
        <% else %>
        <td><b><%= message.sender %></b></td>
        <td><b><%= message.subject %></b></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table> 
<% end %>